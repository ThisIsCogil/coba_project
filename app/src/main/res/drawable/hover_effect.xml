<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State pressed (hover effect) -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/brown" /> <!-- Warna saat ditekan -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="@color/light_brown" /> <!-- Warna default -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>
