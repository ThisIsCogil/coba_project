<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Selected State -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="@color/choco" app:color="@color/choco" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/choco" app:color="@color/choco" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <corners android:radius="20dp" /> <!-- Rounded corners -->
            <stroke android:width="1dp" app:color="@color/choco" /> <!-- Brown border -->
        </shape>
    </item>
</selector>
