<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F3F3F3"
    tools:context=".MenuFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Listmenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Search Bar and Filter -->

        <!-- Horizontal Category Buttons -->

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchBar"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="9dp"
            android:background="@drawable/search_bar"
            android:drawablePadding="0dp"
            app:iconifiedByDefault="false"
            app:searchHintIcon="@null"
            app:queryHint="Cari..."
            app:queryBackground="@null"
            android:focusable="false"
            app:closeIcon="@drawable/ic_cleartext"
            app:layout_constraintEnd_toStartOf="@+id/filterButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/filterButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/search_btn_bg"
            android:src="@drawable/ic_cart"
            android:contentDescription="null"
            app:layout_constraintBottom_toBottomOf="@id/searchBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <HorizontalScrollView
            android:id="@+id/categoryScroll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:paddingVertical="8dp"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchBar">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAllMenu"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/category_btn_selector"
                    android:padding="0dp"
                    android:text="All Menu"
                    android:textAllCaps="false"
                    android:textColor="@color/category_btn_text" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCoffee"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/category_btn_selector"
                    android:padding="0dp"
                    android:text="Coffee"
                    android:textAllCaps="false"
                    android:textColor="@color/category_btn_text" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnMilkshake"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/category_btn_selector"
                    android:padding="0dp"
                    android:text="MilkShake"
                    android:textAllCaps="false"
                    android:textColor="@color/category_btn_text" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnTea"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/category_btn_selector"
                    android:padding="0dp"
                    android:text="Tea"
                    android:textAllCaps="false"
                    android:textColor="@color/category_btn_text" />

            </LinearLayout>
        </HorizontalScrollView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="591dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categoryScroll"
            app:layout_constraintVertical_bias="0.109"
            app:spanCount="2" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>