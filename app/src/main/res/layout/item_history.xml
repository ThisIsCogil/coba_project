<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/hover_effect"
    android:padding="10dp">

    <ImageView
        android:id="@+id/itemImageView2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemTextView2"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:padding="0dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/itemImageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemTextharga"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:gravity="end"
        android:padding="0dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/itemTextView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemTextTgl"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:padding="0dp"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/itemImageView2"
        app:layout_constraintTop_toBottomOf="@+id/itemTextView2" />
</androidx.constraintlayout.widget.ConstraintLayout>
